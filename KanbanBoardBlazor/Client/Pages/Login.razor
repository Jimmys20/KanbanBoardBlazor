@page "/login/{returnUrl?}"

<h3>Login</h3>

<div class="row">
    <div class="col-md-4">
        <EditForm Model="@credentials" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <InputText placeholder="Username" class="form-control" @bind-Value="credentials.Username" />
                <ValidationMessage class="text-danger" For="@(() => credentials.Username)" />
            </div>
            <div class="form-group">
                <InputText placeholder="Password" class="form-control" type="password" @bind-Value="credentials.Password" />
                <ValidationMessage class="text-danger" For="@(() => credentials.Password)" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </EditForm>
    </div>
</div>
