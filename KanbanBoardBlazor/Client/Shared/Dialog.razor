@using KanbanBoardBlazor.Shared
@using Syncfusion.Blazor.Popups

<SfDialog @bind-Visible="@isVisible">
    <DialogTemplates>
        <Content>
            <IssueEditForm issue="issue" callback="onValidSubmit"></IssueEditForm>
        </Content>
    </DialogTemplates>
</SfDialog>
@code {
    [Parameter]
    public Issue issue { get; set; }
    [Parameter]
    public bool isVisible { get; set; }

    private void onValidSubmit(Issue issue)
    {
        isVisible = false;
    }
}
