@using KanbanBoardBlazor.Shared
@using Syncfusion.Blazor.Popups

<SfDialog @ref="aa" @bind-Visible="@isVisible">
    <DialogTemplates>
        <Content>
            <IssueEditForm issue="issue" callback="onValidSubmit"></IssueEditForm>
        </Content>
    </DialogTemplates>
</SfDialog>
@code {
  private SfDialog aa;
  [Parameter]
  public IssueDto issue { get; set; } = new IssueDto();

  private bool isVisible { get; set; }

  public void show()
  {
    //isVisible = true;
    aa.Show();
  }

  public void close()
  {
    isVisible = false;
  }

  private void onValidSubmit(IssueDto issue)
  {
    isVisible = false;
  }
}
